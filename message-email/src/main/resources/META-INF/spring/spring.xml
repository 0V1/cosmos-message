<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="  
	http://www.springframework.org/schema/beans   
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd ">

    <bean id="mail_163" class="message.email.EmailConfig">
        <property name="name">
            <value>163</value>
        </property>
        <property name="smtp">
            <value>smtp.163.com</value>
        </property>
        <property name="port">
            <value>25</value>
        </property>
        <property name="description">
            <value>163邮箱的配置</value>
        </property>
    </bean>

    <bean id="mail_sina" class="message.email.EmailConfig">
        <property name="name">
            <value>sina</value>
        </property>
        <property name="smtp">
            <value>smtp.sina.cn</value>
        </property>
        <property name="port">
            <value>25</value>
        </property>
        <property name="description">
            <value>sina邮箱的配置(.com和.cn的配置一样)</value>
        </property>
    </bean>

    <bean id="mail_sohu" class="message.email.EmailConfig">
        <property name="name">
            <value>sohu</value>
        </property>
        <property name="smtp">
            <value>smtp.sohu.com</value>
        </property>
        <property name="port">
            <value>25</value>
        </property>
        <property name="description">
            <value>sohu邮箱的配置</value>
        </property>
    </bean>

    <bean id="mail_gmail" class="message.email.EmailConfig">
        <property name="name">
            <value>gmail</value>
        </property>
        <property name="smtp">
            <value>smtp.gmail.com</value>
        </property>
        <property name="port">
            <value>465</value>
        </property>
        <property name="description">
            <value>Google的Gmail配置</value>
        </property>
    </bean>

    <bean id="mail_qq" class="message.email.EmailConfig">
        <property name="name">
            <value>qq</value>
        </property>
        <property name="smtp">
            <value>smtp.qq.com</value>
        </property>
        <property name="port">
            <value>465</value>
        </property>
        <property name="description">
            <value>QQ的mail配置</value>
        </property>
    </bean>
</beans>